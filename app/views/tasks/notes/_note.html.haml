.card.shadow
  %div{id: "#{dom_id note}"}
    .m-2.d-flex.align-items-end
      .avatar
        = image_tag "https://robohash.org/#{note.user.email}?size=40x40", class: "avatar_img"
      = note.body
    .info.d-flex.justify-content-between
      .when 
        = time_ago_in_words note.created_at
      .who
        = note.user.email
    